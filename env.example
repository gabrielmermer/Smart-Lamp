# =============================================================================
# SMART LAMP CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# USGS Earthquake API (No key required, but can set custom endpoint)
EARTHQUAKE_API_URL=https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary/significant_day.geojson
EARTHQUAKE_CHECK_INTERVAL=300
EARTHQUAKE_MIN_MAGNITUDE=5.5

# OpenWeatherMap API for Air Quality and Temperature
OPENWEATHER_API_KEY=your_openweather_api_key_here
OPENWEATHER_BASE_URL=http://api.openweathermap.org/data/2.5
AIR_QUALITY_THRESHOLD=100
TEMP_CHECK_INTERVAL=180

# Location for weather APIs (latitude, longitude)
LATITUDE=37.4419
LONGITUDE=-122.1430
LOCATION_NAME=Tashkent

# =============================================================================
# HARDWARE PIN CONFIGURATION
# =============================================================================

# GPIO Pins for Controls
MAIN_BUTTON_PIN=18
COLOR_BUTTON_PIN=24
MODE_BUTTON_PIN=23

# GPIO Pins for RGB LEDs (3 LEDs)
LED1_RED_PIN=12
LED1_GREEN_PIN=13
LED1_BLUE_PIN=19

LED2_RED_PIN=16
LED2_GREEN_PIN=20
LED2_BLUE_PIN=21

LED3_RED_PIN=5
LED3_GREEN_PIN=6
LED3_BLUE_PIN=26

# LED Strip Pin (WS2812B)
LED_STRIP_PIN=10
LED_STRIP_COUNT=30

# MCP3008 ADC Configuration
SPI_BUS=0
SPI_DEVICE=0
POTENTIOMETER_CHANNEL=0

# Audio Configuration
AUDIO_DEVICE=default
SPEAKER_VOLUME=70

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Data and Logging
DATA_LOG_PATH=./data/usage_logs.json
MODEL_SAVE_PATH=./data/models/
LAMP_STATE_FILE=./data/lamp_state.json

# Machine Learning
ML_RETRAIN_INTERVAL=86400  # 24 hours in seconds
ML_MIN_DATA_POINTS=50
ML_PREDICTION_CONFIDENCE_THRESHOLD=0.7

# Web Interface
WEB_HOST=0.0.0.0
WEB_PORT=8501
DEBUG_MODE=False

# System Settings
DEFAULT_BRIGHTNESS=50
DEFAULT_COLOR_R=255
DEFAULT_COLOR_G=255
DEFAULT_COLOR_B=255
AUTO_CYCLE_INTERVAL=5.0
INACTIVITY_TIMEOUT=1800  # 30 minutes

# Audio URLs (Internet Radio)
RADIO_STATIONS='[
  {"name": "Chill Radio", "url": "http://streamurl1.com"},
  {"name": "Nature Sounds", "url": "http://streamurl2.com"}
]'

# Ambient Sound Files (local paths)
AMBIENT_SOUNDS_PATH=./data/audio/ 